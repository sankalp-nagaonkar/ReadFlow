{
  "manifest_version": 3,
  "name": "Speak Blogs",
  "version": "1.0.0",
  "description": "Highlight text and hear it read aloud with natural AI voices",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_title": "Speak Blogs - Read selected text aloud"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["ws.js", "audio.js", "overlay.js", "content.js"],
      "css": ["overlay.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
